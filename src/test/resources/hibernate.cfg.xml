<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost/projectx</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admin</property>
    <property name="hibernate.show_sql">true</property>
    <property name="connection.pool_size">1</property>
    <property name="hbm2ddl.auto">create</property>
    <mapping class="com.projectx.domain.Step"/>
    <mapping class="com.projectx.domain.StepStatus"/>
    <mapping class="com.projectx.domain.TestCase"/>
    <mapping class="com.projectx.domain.TestCaseStatus"/>
    <mapping class="com.projectx.domain.User"/>
  </session-factory>
</hibernate-configuration>
